<h1>Dashboard</h1>
<h2>My Games</h2>
<table>
  <% current_user.games.each do |game| %>
      <tr>
        <td><%= "#{game.id} - #{game.state.to_s}" %></td>
        <% if game.playing? %>
          <td><%= link_to("Play", game) %></td>
        <% else %>
          <td>Waiting for players</td>
        <% end %>
      </tr>
  <% end %>
</table>
<h2><%= link_to("Open a new table", new_game_path)%></h2>
<h2>Other tables</h2>
<table>
  <% @other_games.each do |game| %>
    <tr>
      <td><%= game.id %></td>
      <td><%= button_to("Join", join_game_path(game)) %></td>
    </tr>
  <% end %>
</table>
<p><%= link_to current_user.handle, current_user %></p>
<div id="logout_btn"><%= button_to "Log out", session_path, method: :delete %></div>
